= form_for @blog_entry do |f|
  - if @blog_entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@blog_entry.errors.count, "error")} prohibited this blog_entry from being saved:"
      %ul
        - @blog_entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_field :body
  .field
    = f.label :url_slug
    = f.text_field :url_slug
  .field
    = f.label :timestamps
    = f.text_field :timestamps
  .field
    = f.label :published_at
    = f.datetime_select :published_at
  .actions
    = f.submit 'Save'
