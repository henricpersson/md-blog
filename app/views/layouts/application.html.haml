!!! html5
%html
  %head
    %title MdBlog
    = stylesheet_link_tag 'application', media: 'all'
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .top.clearfix
      %ul.navi
        %li.logo
          = link_to root_path, class: 'brand' do
            = image_tag 'logo.png', width: 50, height: 50
        %li.header
          = link_to 'Cole Valley Code', root_path
        %li.tagline
          Clearing my mind from programming thoughts.
          This memo board is open source and made in Cole Valley.
        %li.admin
    = yield
    = link_to 'Log in', '/auth/google_oauth2'
    - if session[:admin]
      = link_to 'Log out', '/session/logout'
      = link_to 'Admin', blog_entries_path
