!!! html5
%html
  %head
    %title Cole Valley Code
    = stylesheet_link_tag 'application', media: 'all'
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .top
      .inner.clearfix
        .left
          = link_to '', root_path, class: 'logo'
        .middle
          %h1.header
            = link_to 'Cole Valley Code', root_path
          %p.tagline
            This memo board is
            = link_to 'open source', 'https://github.com/henricpersson/md-blog'
            and has an open mind.
    = yield
    .footer
      - if session[:admin]
        = link_to 'Log out', '/session/logout'
        |
        = link_to 'Admin', blog_entries_path
      - else
        = link_to 'Log in', '/auth/google_oauth2'


:javascript
  var disqus_shortname = 'codevalleycode';

  (function () {
  var s = document.createElement('script'); s.async = true;
  s.type = 'text/javascript';
  s.src = 'http://' + disqus_shortname + '.disqus.com/count.js';
  (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
  }());
