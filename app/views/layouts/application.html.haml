!!! html5
%html
  %head
    %title MdBlog
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse.navbar-static-top
      .navbar-inner
        .container
          = link_to 'Markdown', root_path, class: 'brand'
          %ul.nav
            %li
              = link_to 'Blog', root_path
            %li
              = link_to 'Admin', blog_entries_path
    .container
      = yield
